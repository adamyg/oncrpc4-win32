@SET_MAKE@
ROOT=		@abs_top_builddir@
top_builddir=	@top_builddir@

# File extensions

C=		.c
E=
O=		.o
H=		.h

CLEAN=		*.bak *~ *.BAK *.swp *.tmp core *.core a.out
XCLEAN=

# Compilers, programs

CC=		@CC@
CXX=		@CXX@
ifeq ("$(CXX)","")
CXX=		$(CC)
endif
RM=		@RM@
RC=		@RC@
PERL=		@PERL@
LIBTOOL=	@LIBTOOL@

# Configuration

ifeq ("$(BUILD_TYPE)","")	#default
BUILD_TYPE=	debug
MAKEFLAGS+=	BUILD_TYPE=debug
endif
ifneq ("$(BUILD_TYPE)","release")
RTSUFFIX=d
endif

# Directories

D_INC=		$(ROOT)/include
D_BIN=		$(ROOT)/bin@TOOLCHAINEXT@/$(BUILD_TYPE)
D_OBJ=		$(ROOT)/objects@TOOLCHAINEXT@/$(BUILD_TYPE)/rpcbind
D_LIB=		$(ROOT)/lib@TOOLCHAINEXT@/$(BUILD_TYPE)

# Common flags

XFLAGS=
CFLAGS=		@CFLAGS@
CWARN=		@CWARN@
ifeq (gcc,$(findstring gcc,$(CC)))
CWARN+=		-Wno-unused-result -Wno-unused-parameter -Wno-unused-function
endif
CDEBUG=		@CDEBUG@
CRELEASE=	@CRELEASE@
CXXFLAGS=	@CXXFLAGS@
CXXDEBUG=	$(filter-out -d2i, @CXXDEBUG@)
ifeq ("$(CXXDEBUG)","")
CXXDEBUG=	$(CDEBUG)
endif
CXXRELEASE=	@CXXRELEASE@
ifeq ("$(CXXRELEASE)","")
CXXRELEASE=	$(CRELEASE)
endif
LDDEBUG=	@LDDEBUG@
LDRELEASE=	@LDRELEASE@

CINCLUDE=	-I. -I$(D_INC) @CINCLUDE@
CEXTRA=		@DEFS@ -DRPCBIND_SERVICE -DLIBRPC_SOURCE -D_REENTRANT

ifneq ("@WINSDKLIB@","")
LIBPATH=	$(D_LIB);@WINSDKLIB@
else
LIBPATH=	$(D_LIB)
endif

ifeq ("$(BUILD_TYPE)","release")
CFLAGS+=	$(CRELEASE) $(CWARN) $(CINCLUDE) $(CEXTRA) $(XFLAGS)
CXXFLAGS+=	$(CXXRELEASE) $(CXXWARN) $(CINCLUDE) @CXXINCLUDE@ $(CEXTRA) $(XFLAGS)
LDFLAGS=	$(LDRELEASE) @LDFLAGS@
else
CFLAGS+=	$(CDEBUG) $(CWARN) $(CINCLUDE) $(CEXTRA) $(XFLAGS)
CXXFLAGS+=	$(CXXDEBUG) $(CXXWARN) $(CINCLUDE) @CXXINCLUDE@ $(CEXTRA) $(XFLAGS)
LDFLAGS=	$(LDDEBUG) @LDFLAGS@
endif
LDLIBS=		-L$(LIBPATH) $(LINKLIBS) @LIBS@ @EXTRALIBS@

ARFLAGS=	rcv
YFLAGS=		-d
RMFLAGS=	-f


#########################################################################################
# Targets

TARGET=		rpcbind$(E)

ONCRPCBASE=	../libsrc
CINCLUDE+=	-I$(ONCRPCBASE)

VPATH=		../libNTService
VPATH+=		../libService

CSOURCES=\
	check_bound.c		\
	pmap_svc.c		\
	rpcbind.c		\
	rpcb_stat.c		\
	rpcb_svc.c		\
	rpcb_svc_4.c		\
	rpcb_svc_com.c		\
	security.c		\
	util.c			\
	warmstart.c

CPPSOURCES=\
	Logger.cpp		\
	Service.cpp		\
	ServiceDiags.cpp	\
	ServiceDiagsSyslog.cpp	\
	SimpleConfig.cpp	\
	rpcbind_service.cpp

RESOURCES=\
	rpcbind.rc

OBJS+=		$(addprefix $(D_OBJ)/,$(subst .cpp,$(O),$(CPPSOURCES)))
OBJS+=		$(addprefix $(D_OBJ)/,$(subst .c,$(O),$(CSOURCES)))
ifeq (mingw,$(findstring mingw,"@build_os@"))
OBJS+=		$(addprefix $(D_OBJ)/,$(subst .rc,_res.o,$(RESOURCES)))
else
OBJS+=		$(addprefix $(D_OBJ)/,$(subst .rc,.res,$(RESOURCES)))
endif

XCLEAN=		service_license.h bsd_license.h rpcbind_usage.h


#########################################################################################
# Rules

.PHONY:			build resources release debug
build:		resources $(D_BIN)/$(TARGET)

release:
		$(MAKE) BUILD_TYPE=release $(filter-out release, $(MAKECMDGOALS))
debug:
		$(MAKE) BUILD_TYPE=debug $(filter-out debug, $(MAKECMDGOALS))

resources:		rpcbind_usage.h service_license.h bsd_license.h

rpcbind_usage.h:	rpcbind_usage.txt ../liboncrpc/mklicense.pl
		@$(PERL) ../liboncrpc/mklicense.pl $< $@ rpcbind_usage

service_license.h:	../LICENSE ../liboncrpc/mklicense.pl
		@$(PERL) ../liboncrpc/mklicense.pl $< $@ service_license

bsd_license.h:		../liboncrpc/bsd_license.txt ../liboncrpc/mklicense.pl
		@$(PERL) ../liboncrpc/mklicense.pl $< $@ bsd_license

$(D_BIN)/$(TARGET):	MAPFILE=$(basename $@).map
$(D_BIN)/$(TARGET):	LINKLIBS=-lNTService -loncrpc -lsthread -lcompat
$(D_BIN)/$(TARGET):	$(D_OBJ)/.created $(OBJS) $(RESOURCES)
		$(LIBTOOL) --mode=link $(CC) $(LDFLAGS) -o $@ $(OBJS) $(LDLIBS) @LDMAPFILE@

$(D_OBJ)/.created:
		-@mkdir $(D_OBJ)
		@echo "do not delete" > $@

clean:
		-@$(RM) $(RMFLAGS) $(BAK) $(D_BIN)/$(TARGET) $(TARGET) $(OBJS) $(CLEAN) $(XCLEAN) >/dev/null 2>&1

$(D_OBJ)/%$(O):		%$(C)
		$(CC) $(CFLAGS) -o $@ -c $<

$(D_OBJ)/%$(O):		%.cpp
		$(CXX) $(CXXFLAGS) -o $@ -c $<

$(D_OBJ)/%.res:		%.rc
		$(RC) -fo $@ $<

$(D_OBJ)/%_res.o:	%.rc
		$(RC) -o $@ $<

#end
